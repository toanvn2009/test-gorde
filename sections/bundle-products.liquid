      "blocks": [
        {
          "type": "product",
          "settings": {
            "position_top": 45,
            "position_left": 32
          }
        },
        {
          "type": "product",
          "settings": {
            "position_top": 47,
            "position_left": 56
          }
        },
        {
          "type": "product",
          "settings": {
            "position_top": 62,
            "position_left": 76
          }
        }
      ]
    }
  ]
}
