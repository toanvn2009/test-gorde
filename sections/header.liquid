{%- liquid
  assign transparent_on_home = ''
  assign section_width = ''
  if section.settings.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section.settings.section_width == 'expand_full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'full-width-gap'
  endif
-%}
<script src="{{ 'localization-form.js' | asset_url }}" defer="defer"></script>
{%- if settings.cart_type == "drawer" -%}
  <script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'cart-drawer.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{%- if settings.cart_type == "added_message" -%}
  <script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{%- if section.settings.transparent_on_home -%}
  {%- assign transparent_on_home = " transparent transition" -%}
{%- endif -%}
{%- capture style -%}
  {%- if section.settings.uppercase_first_level -%}
    --menu-parent-text-transform: uppercase;
  {%- endif -%}
  {%- if section.settings.header_text_icon_transparent != blank -%} 
    --header-transparent-color: {{ section.settings.header_text_icon_transparent.red }}, {{ section.settings.header_text_icon_transparent.green }}, {{ section.settings.header_text_icon_transparent.blue }};
  {%- endif -%}
  --logo-width: {{ section.settings.logo_width }}px; --logo-position: {{ section.settings.logo_position }}; --logo-mobile-width: {{ section.settings.logo_width_mobile }}px
{%- endcapture -%}
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
<{% if section.settings.sticky_header_type != 'none' %}sticky-header data-sticky-type="{{ section.settings.sticky_header_type }}"{% else %}div{% endif %} class="header-wrapper">
  <header class="color-{{ section.settings.color_scheme }} gradient bls_header relative z-4{{ transparent_on_home }}{% if section.settings.show_border_bottom and section.settings.transparent_on_home %} {% if section.settings.logo_position != 'menu-left' %}border-bottom{% endif %}{% endif %}" style="{{ style | strip | strip_newlines }}">
    <div class="{{ section_width }}">
      <header-inner class="d-grid align-center logo-{{ section.settings.logo_position }}{% if section.settings.logo_position == 'menu-left' %} logo-left border-bottom{% endif %}{% if section.settings.show_border_bottom and section.settings.transparent_on_home == blank %} border-bottom{% endif %}">
        <div class="header__logo text-center{% if section.settings.logo_position != 'center' %} text-1025-unset{% endif %}">
          {% if request.page_type == 'index' %}
            <h1 class="my-0{% if settings.heading_letter_spacing == '0.25em' %} fs-24{% else %} fs-36{% endif %} lh-normal heading-letter-spacing">
              {% else %}
              <div class="h1 my-0{% if settings.heading_letter_spacing == '0.25em' %} fs-24{% else %} fs-36{% endif %} lh-normal heading-letter-spacing">
          {%- endif -%}
            <a href="{{ routes.root_url }}" class="header__heading-link link text-center link--text remove-underline header-color heading-style" aria-label="{{ shop.name }}">
              {%- liquid
                assign logo_img = ''
                assign logo_transparent_img = ''
                assign logo_img = section.settings.logo
                assign logo_transparent_img = section.settings.logo_transparent
              -%}
              {% if section.settings.transparent_on_home and section.settings.logo_transparent != blank %}
                {%- liquid
                  assign img_transparent_alt = logo_transparent_img.alt | default: shop.name | escape
                  assign logo_height = logo_transparent_img.width | divided_by: logo_transparent_img.aspect_ratio
                -%}
                {{ logo_transparent_img | image_url: width: 600 | image_tag:
                  class: 'header__heading-logo transparent-logo',
                  widths: '50, 100, 150, 200, 250, 300, 400, 500, 600',
                  height: logo_height,
                  width: logo_transparent_img.width,
                  alt: img_transparent_alt,
                  sizes: "100vw",
                  fetchpriority: "high"
                }}
              {% endif %}
              {%- if logo_img != blank -%}
                {%- assign img_alt = logo_img.alt | default: shop.name | escape -%}
                {%- assign logo_height = logo_img.width | divided_by: logo_img.aspect_ratio -%}
                {{ logo_img | image_url: width: 600 | image_tag:
                  class: 'header__heading-logo',
                  widths: '50, 100, 150, 200, 250, 300, 400, 500, 600',
                  height: logo_height,
                  width: logo_img.width,
                  alt: img_alt,
                  sizes: "100vw",
                  fetchpriority: "high"
                }}
              {%- else -%}
                <span class="site-logo">{{ shop.name }}</span>
              {%- endif -%}
            </a>
          {% if request.page_type == 'index' %}
            </h1>
            {% else %}
          </div>
          {%- endif -%}
        </div>
        {%- if section.settings.menu != blank -%}
          <nav class="header__menu overlay-menu overlay-section">
            <toggle-menu data-item="overlay-menu" class="hidden-no-js mobile-menu-toggle">
              <button class="touch-target button btn-reset flex-column btn-close-menu relative" aria-haspopup="dialog" aria-label="{{ 'sections.header.expand_menu' | t }}" id="menu-bar-icon-bubble">
                <span class="icon-menu first"></span>
                <span class="icon-menu second"></span>
                <span class="icon-menu last"></span>
                <span class="icon-close opacity-0 absolute inset-0 z-1 d-inline-flex align-center justify-content-center">
                  {% render 'icon-close', custom_width: 22 %}
                </span>
              </button>
            </toggle-menu>
              <input class="d-block d-1025-none side-menu hidden-js touch-target opacity-0 absolute inset-y-0" type="checkbox" id="side-menu"/>
              <label class="d-block d-1025-none hamb hidden-js btn-close-menu relative" for="side-menu">                
                <span class="icon-menu first d-block my-3"></span>
                <span class="icon-menu second d-block my-3"></span>
                <span class="icon-menu last d-block my-3"></span>
                <span class="icon-close absolute opacity-0 inset-0 z-1 d-inline-flex align-center justify-content-center">
                  {% render 'icon-close', custom_width: 22 %}
                </span>
                <span class="visually-hidden">{{ 'sections.header.expand_menu' | t }}</span>
              </label>
            <main-menu class="mobile-menu-drawer d-flex{% if section.settings.logo_position == 'left' %} justify-content-center{% endif %}">
              <div class="mobile-menu-drawer--inner relative position-1025-unset d-flex flex-column w-full h-full">
                <div class="h-full overflow-x-hidden overflow-y-auto h-full scroll-smooth">
                  <ul class="main-menu parent-menu d-1025-inline-flex flex-wrap list-unstyled m-0{% if section.settings.logo_position == 'left' %} justify-content-center-1025{% endif %}" role="list" data-focus-item="menu-bar-icon-bubble">
                    {% for link in section.settings.menu.links %}
                      {%- if section.blocks.size > 0 -%}
                        {%- liquid
                          assign is_mega_menu = false
                          assign lastBlock = null
                          for block in section.blocks
                            if block.settings.text == link.title
                              assign lastBlock = block
                            endif
                          endfor
                        -%}
                        {% if lastBlock != null %}
                          {%- liquid assign has_content = false -%}
                          {%- case lastBlock.type -%}
                            {%- when "menu_promotion" -%}
                              {%- for i in (1..2) -%}
                                {%- capture promotion -%}promotion_image_{{ i }}{%- endcapture -%}
                                {%- liquid
                                  if lastBlock.settings[promotion] != blank
                                    assign has_content = true
                                  endif
                                -%}
                              {%- endfor -%}
                            {%- when "menu_collection" -%}
                              {%- for i in (1..6) -%}
                                {%- capture collection -%}collection_{{ i }}{%- endcapture -%}
                                {%- liquid
                                  if lastBlock.settings[collection] != blank
                                    assign has_content = true
                                  endif
                                -%}
                              {%- endfor -%}
                            {%- else -%}
                              {%- for i in (1..2) -%}
                                {%- capture product -%}product_{{ i }}{%- endcapture -%}
                                {%- liquid
                                  if lastBlock.settings[product] != blank
                                    assign has_content = true
                                  endif
                                -%}
                              {%- endfor -%}
                            {%- endcase -%}
                          <li class="menu-link{% if link.links.size > 0 or has_content %} have-child mega-menu{%- endif -%}{% if link.links.size == 0 and has_content %} no-sub{%- endif -%}" role="listitem">
                            <noscript>
                              <details>
                                <summary class="menu__item-link header-color-lg first-level{% if settings.menu_font == 'heading_font' %} heading-font font-smoothing-initial{% endif %} py-15 py-1025-2 relative first-child-js remove-underline{% if link.links.size > 0 %} pr-1024-44{% endif %}{% if section.settings.uppercase_first_level %} uppercase{% endif %}">
                                  <span class="link_text">{{ link.title }}</span>
                                  {%- if link.links.size > 0 or has_content -%}
                                    <span class="open-children-toggle touch-target absolute right-0 w-full inset-0 currentColor-svg">
                                      {% render 'icon-arrow-down', custom_width: 12 %}
                                    </span>
                                  {%- endif -%}
                                </summary>
                                {%- if link.links.size > 0 or has_content -%}
                                  <div class="sub-menu absolute-1025 bg-default inset-x-0">
                                    <back-button tabindex="0" class="d-block d-1025-none relative mb-20 fs-small mt-15 hidden-no-js">
                                      <div class="accent-color-second-bg rounded-corner-item px-15 pb-3 pt-5 d-inline-flex align-center heading-color pointer">
                                        <span class="icon-back absolute left-10 inset-y-0 d-inline-flex align-center lh-1 currentColor-svg">
                                          {%- render 'icon-prev', custom_width: 12 -%}
                                        </span>
                                        <span class="pl-15 heading-color">{{- link.title -}}</span>
                                      </div>
                                    </back-button>
                                    <div class="{{ section_width }}">
                                      {%- case lastBlock.type -%}
                                      {%- when "menu_promotion" -%}
                                        {% assign banner_count = 0 %}
                                        {% for i in (1..2) %}
                                          {%- capture promotion_image -%}promotion_image_{{i}}{%- endcapture -%}
                                          {%- if lastBlock.settings[promotion_image] != blank -%}
                                            {% assign banner_count = banner_count | plus: 1 %}
                                          {%- endif -%}
                                        {% endfor %}
                                        <megamenu-inner class="d-flex flex-cols flex-mega-banner{% if lastBlock.settings.promotion_position == "left" %} row-reverse{% endif %}"  style="--col-mega-width: {{ lastBlock.settings.promotion_image_width }}%">
                                          {% if link.links.size > 0 %}
                                            <div class="menu-list flex-1 mt-1025-0-impo" style="--row-gap: 40px">
                                              {%- render 'horizontal-menu' | link: link | type: "mega" | column: lastBlock.settings.promotion_menu_column | is_mega: true -%}
                                            </div>
                                          {% endif %}
                                          {%- if lastBlock.settings.promotion_image_1 != blank or lastBlock.settings.promotion_image_2 != blank -%}
                                            <div class="custom-menu-column submenu-banner mt-30 mt-1025-0">
                                              <div class="banner grid-cols gap-small tablet-2 mb-1 row-as-column-gap" style="--col-number: {{ banner_count }}">
                                                {%- if lastBlock.settings.promotion_image_1 != blank -%}
                                                  {%- assign banner_alt = lastBlock.settings.promotion_image_1.alt | default: link.title | escape -%}
                                                  <a {% if lastBlock.settings.promotion_link_1 == blank %} role="link" aria-disabled="true" {% else %} aria-label="{{ link.title }}" href="{{ lastBlock.settings.promotion_link_1 }}" {% endif %} class="header-banner rounded-corner-item p-0">
                                                    {{ lastBlock.settings.promotion_image_1 | image_url: width: 600 | image_tag:
                                                      class: 'menu-banner-img rounded-corner-item',
                                                      widths: '50, 100, 150, 200, 250, 300, 400, 500, 600, 700',
                                                      width: lastBlock.settings.promotion_image_1.width,
                                                      height: lastBlock.settings.promotion_image_1.height,
                                                      loading: "lazy",
                                                      sizes: '100vw',
                                                      alt: banner_alt
                                                    }}
                                                  </a>
                                                {%- endif -%}
                                                {%- if lastBlock.settings.promotion_image_2 != blank -%}
                                                  {%- assign banner_alt = lastBlock.settings.promotion_image_2.alt | default: link.title | escape -%}
                                                <a {% if lastBlock.settings.promotion_link_2 == blank %} role="link" aria-disabled="true" {% else %} aria-label="{{ link.title }}" href="{{ lastBlock.settings.promotion_link_2 }}" {% endif %} class="header-banner rounded-corner-item p-0">
                                                  {{ lastBlock.settings.promotion_image_2 | image_url: width: 600 | image_tag:
                                                    class: 'menu-banner-img rounded-corner-item',
                                                    widths: '50, 100, 150, 200, 250, 300, 400, 500, 600, 700',
                                                    width: lastBlock.settings.promotion_image_2.width,
                                                    height: lastBlock.settings.promotion_image_2.height,
                                                    loading: "lazy",
                                                    sizes: '100vw',
                                                    alt: banner_alt
                                                  }}
                                                </a>
                                                {%- endif -%}
                                              </div>
                                            </div>
                                          {%- endif -%}
                                        </megamenu-inner>
                                      {%- when "menu_collection" -%}
                                        {% assign collection_count = 0 %}
                                        {% for i in (1..6) %}
                                          {%- capture collection -%}collection_{{i}}{%- endcapture -%}
                                          {%- if lastBlock.settings[collection] != blank -%}
                                            {% assign collection_count = collection_count | plus: 1 %}
                                          {%- endif -%}
                                        {% endfor %}
                                        <megamenu-inner class="d-flex flex-cols flex-mega-banner{% if collection_count > 4 and lastBlock.settings.collection_width > 70 %} flex-wrap{% endif %}{% if lastBlock.settings.collection_width > 85 or collection_count > 4 %} flex-wrap{% endif %}" style="{% if collection_count > 4 %} --col-mega-width: 100% {% else %}--col-mega-width: {{ lastBlock.settings.collection_width }}% {% endif %}">
                                          {% if link.links.size > 0 %}
                                            <div class="menu-list flex-1{% if collection_count > 4 and lastBlock.settings.collection_width > 70 %} w-full{% endif %}{% if lastBlock.settings.collection_width > 85 or collection_count > 4 %} w-full{% endif %} mt-1025-0-impo" style="--row-gap: 40px">
                                              {%- render 'horizontal-menu' | link: link | type: "mega" | column: lastBlock.settings.collection_menu_column | is_mega: true -%}
                                            </div>
                                          {% endif %}
                                            {%- if collection_count > 0 -%}
                                            <div class="custom-menu-column mt-30 mt-1025-0">
                                              <div class="row-as-column-gap grid-cols gap-small tablet-3-5 mb-1-5" style="--col-number: {{ collection_count }}">
                                              {%- for i in (1..6) -%}
                                                {%- capture collection -%}collection_{{i}}{%- endcapture -%}
                                                {%- liquid
                                                  assign collection_value = lastBlock.settings[collection]
                                                -%}
                                                {%- if collection_value != blank -%}
                                                  {%- liquid
                                                    assign p_url = collection_value.url
                                                    assign p_img = collection_value.featured_image
                                                    assign product_ratio = "3/4"
                                                    if settings.product_image_ratio == "adapt_to_image"
                                                      assign product_ratio = p_img.aspect_ratio
                                                    elsif settings.product_image_ratio == "square"
                                                      assign product_ratio = "1/1"
                                                    endif
                                                  -%}
                                                  {%- capture style_ratio -%}
                                                    --aspect-ratio: 
                                                    {%- if p_img != blank -%} 
                                                      {%- if collection_value.image != blank -%}
                                                        {{ p_img.aspect_ratio }}
                                                      {%- else -%}
                                                        {{ product_ratio }}
                                                      {%- endif -%}
                                                    {%- else -%}
                                                      1/1
                                                    {% endif %}
                                                  {%- endcapture -%}
                                                  {%- if p_url != blank -%}
                                                      <div class="collection-items menu-collection rounded-corner-item relative">
                                                        {%- assign banner_alt = p_img.alt | default: collection_value.title | escape -%}
                                                        <a
                                                          role="link" aria-label="{{ collection_value.title }}"
                                                          href="{{ p_url }}"
                                                          class="banner__media collection-media p-0 hover-effect{% if settings.enable_zoom_effect %} zoom-in {% else %} fade-in {% endif %}"
                                                          style="{{ style_ratio | strip | strip_newlines }}"
                                                        >
                                                          {%- if p_img != blank -%}
                                                            {{ p_img | image_url: width: 600 | image_tag:
                                                              class: 'menu-collection-img',
                                                              widths: '50, 100, 150, 200, 250, 300, 400, 500, 600, 700',
                                                              width: p_img.width,
                                                              height: p_img.height,
                                                              loading: "lazy",
                                                              sizes: '100vw',
                                                              alt: banner_alt
                                                            }}
                                                          {%- else -%}
                                                            {% render 'placeholder-render' | type: "collection" %}
                                                          {%- endif -%}
                                                          <div class="collection-information mt-15 text-left absolute d-flex flex-column inset-0 color-light px-15 pb-15 pb-sm-30 px-sm-30 pointer-none justify-content-end">
                                                            <span class="remove-underline h5 m-0 relative z-2">{{ collection_value.title }}</span>
                                                          </div>
                                                        </a>
                                                      </div>
                                                  {%- endif -%}
                                                {%- endif -%}
                                              {%- endfor -%}
                                              </div>
                                            </div>
                                            {%- endif -%}
                                        </megamenu-inner>
                                      {%- else -%}
                                      {% assign product_count = 0 %}
                                        {% for i in (1..3) %}
                                          {%- capture product -%}product_{{ i }}{%- endcapture -%}
                                          {%- if lastBlock.settings[product] != blank -%}
                                            {% assign product_count = product_count | plus: 1 %}
                                          {%- endif -%}
                                        {% endfor %}
                                      <megamenu-inner class="d-flex flex-cols flex-mega-banner" style="--col-mega-width: {{ lastBlock.settings.product_width }}%">
                                        {% if link.links.size > 0 %}
                                          <div class="menu-list flex-1 mt-1025-0-impo" style="--row-gap: 40px">
                                            {%- render 'horizontal-menu' | link: link | type: "mega" | column: lastBlock.settings.product_menu_column | is_mega: true -%}
                                          </div>
                                        {% endif %}
                                        {%- if product_count > 0 -%}  
                                          <div class="custom-menu-column mt-30 mt-1025-0 ">
                                          <div class="grid-cols gap-medium tablet-3-5 mb-1-5" style="--col-number: {{ product_count }}">
                                            {%- for i in (1..3) -%}
                                              {%- capture product -%}product_{{ i }}{%- endcapture -%}
                                              {%- liquid
                                                assign product_value = lastBlock.settings[product]
                                              -%} 
                                              {%- if product_value != blank -%}
                                                {% render 'card-product', card_product: product_value, disable_quickview: true %}
                                              {%- endif -%}
                                            {%- endfor -%}
                                          </div> 
                                        </div>
                                        {%- endif -%}
                                      </megamenu-inner>
                                      {%- endcase -%}
                                    </div>
                                  </div>
                                {%- endif -%}
                              </details>
                            </noscript>
                            <header-menu class="no-js-hidden">
                              <details id="Details-HeaderMenu-{{ forloop.index }}">
                                <summary class="no-js-hidden menu__item-link first-level{% if settings.menu_font == 'heading_font' %} heading-font font-smoothing-initial{% endif %} py-15 py-1025-2 relative header-color first-child-js remove-underline{% if link.links.size > 0 %} pr-1024-44{% endif %}{% if section.settings.uppercase_first_level %} uppercase{% endif %}" aria-label="{{ link.title }}">
                                  <span class="link_text">{{ link.title }}</span>
                                  {%- if link.links.size > 0 or has_content -%}
                                    <span class="open-children-toggle touch-target absolute right-0 w-full inset-0 currentColor-svg">
                                      {% render 'icon-arrow-down', custom_width: 12 %}
                                    </span>
                                  {%- endif -%}
                                </summary>
                                {%- if link.links.size > 0 or has_content -%}
                                  <div class="sub-menu absolute-1025 bg-default inset-x-0">
                                    <back-button tabindex="0" class="d-block d-1025-none relative mb-20 fs-small mt-15 hidden-no-js">
                                      <div class="accent-color-second-bg rounded-corner-item px-15 pb-3 pt-5 d-inline-flex align-center heading-color pointer">
                                        <span class="icon-back absolute left-10 inset-y-0 d-inline-flex align-center lh-1 currentColor-svg">
                                          {%- render 'icon-prev', custom_width: 12 -%}
                                        </span>
                                        <span class="pl-15 heading-color">{{- link.title -}}</span>
                                      </div>
                                    </back-button>
                                    <div class="{{ section_width }}">
                                      {%- case lastBlock.type -%}
                                      {%- when "menu_promotion" -%}
                                        {% assign banner_count = 0 %}
                                        {% for i in (1..2) %}
                                          {%- capture promotion_image -%}promotion_image_{{i}}{%- endcapture -%}
                                          {%- if lastBlock.settings[promotion_image] != blank -%}
                                            {% assign banner_count = banner_count | plus: 1 %}
                                          {%- endif -%}
                                        {% endfor %}
                                        <megamenu-inner class="d-flex flex-cols flex-mega-banner{% if lastBlock.settings.promotion_position == "left" %} row-reverse{% endif %}"  style="--col-mega-width: {{ lastBlock.settings.promotion_image_width }}%">
                                          {% if link.links.size > 0 %}
                                            <div class="menu-list flex-1 mt-1025-0-impo" style="--row-gap: 40px">
                                              {%- render 'horizontal-menu' | link: link | type: "mega" | column: lastBlock.settings.promotion_menu_column | is_mega: true -%}
                                            </div>
                                          {% endif %}
                                          {%- if lastBlock.settings.promotion_image_1 != blank or lastBlock.settings.promotion_image_2 != blank -%}
                                            <div class="custom-menu-column submenu-banner mt-30 mt-1025-0">
                                              <div class="banner grid-cols gap-small tablet-2 mb-1 row-as-column-gap" style="--col-number: {{ banner_count }}">
                                                {%- if lastBlock.settings.promotion_image_1 != blank -%}
                                                  {%- assign banner_alt = lastBlock.settings.promotion_image_1.alt | default: link.title | escape -%}
                                                  <a {% if lastBlock.settings.promotion_link_1 == blank %} role="link" aria-disabled="true" {% else %} aria-label="{{ link.title }}" href="{{ lastBlock.settings.promotion_link_1 }}" {% endif %} class="header-banner rounded-corner-item p-0">
                                                    {{ lastBlock.settings.promotion_image_1 | image_url: width: 600 | image_tag:
                                                      class: 'menu-banner-img rounded-corner-item',
                                                      widths: '50, 100, 150, 200, 250, 300, 400, 500, 600, 700',
                                                      width: lastBlock.settings.promotion_image_1.width,
                                                      height: lastBlock.settings.promotion_image_1.height,
                                                      loading: "lazy",
                                                      sizes: '100vw',
                                                      alt: banner_alt
                                                    }}
                                                  </a>
                                                {%- endif -%}
                                                {%- if lastBlock.settings.promotion_image_2 != blank -%}
                                                  {%- assign banner_alt = lastBlock.settings.promotion_image_2.alt | default: link.title | escape -%}
                                                <a {% if lastBlock.settings.promotion_link_2 == blank %} role="link" aria-disabled="true" {% else %} aria-label="{{ link.title }}" href="{{ lastBlock.settings.promotion_link_2 }}" {% endif %} class="header-banner rounded-corner-item p-0">
                                                  {{ lastBlock.settings.promotion_image_2 | image_url: width: 600 | image_tag:
                                                    class: 'menu-banner-img rounded-corner-item',
                                                    widths: '50, 100, 150, 200, 250, 300, 400, 500, 600, 700',
                                                    width: lastBlock.settings.promotion_image_2.width,
                                                    height: lastBlock.settings.promotion_image_2.height,
                                                    loading: "lazy",
                                                    sizes: '100vw',
                                                    alt: banner_alt
                                                  }}
                                                </a>
                                                {%- endif -%}
                                              </div>
                                            </div>
                                          {%- endif -%}
                                        </megamenu-inner>
                                      {%- when "menu_collection" -%}
                                        {% assign collection_count = 0 %}
                                        {% for i in (1..6) %}
                                          {%- capture collection -%}collection_{{i}}{%- endcapture -%}
                                          {%- if lastBlock.settings[collection] != blank -%}
                                            {% assign collection_count = collection_count | plus: 1 %}
                                          {%- endif -%}
                                        {% endfor %}
