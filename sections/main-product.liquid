{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_width = ''
  if section.settings.section_width == 'fix_width'
    assign section_width = ' container'
  elsif section.settings.section_width == 'expand_full_width'
    assign section_width = ' full-width px-20'
  else
    assign section_width = ' full-width-gap'
  endif
  if settings.color_swatch_trigger != blank and settings.enable_color_swatches != false
    assign option_color_name = settings.color_swatch_trigger
  else
    assign option_color_name = 'Color'
  endif
-%}
{%- capture style -%}
  --section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px;
{%- endcapture -%}
<section
  id="MainProduct-{{ section.id }}"
  class="color-{{ section.settings.color_scheme }} gradient  section-{{ section.id }}-padding product product__item-js main__product section-padding{% if section.settings.image_zoom == 'external_zoom' %} external{% endif %}"
  style="{{ style | strip | strip_newlines }}"
  data-section="{{ section.id }}"
  data-option-name="{{ option_color_name }}"
>
  <div class="{{ section_width }}">
    {%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
    <script src="{{ 'photoswipe.js' | asset_url }}" defer="defer"></script>
    {%- if section.settings.image_zoom == 'lightbox' -%}
      {{ 'photoswipe.css' | asset_url | stylesheet_tag }}
      {{ 'default-skin.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'photoswipe-ui-default.js' | asset_url }}" defer="defer"></script>
      <script src="{{ 'product-zoom.js' | asset_url }}" defer="defer"></script>
    {%- elsif section.settings.image_zoom == 'external_zoom' or section.settings.image_zoom == 'inner_zoom' -%}
      <script src="{{ 'drift.js' | asset_url }}" defer="defer"></script>
      {{ 'drift.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'product-drift-zoom.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}
    {% if section.settings.show_breadcrumb %}
      <div class="breadcrumbs mb-40">
        {%- render 'breadcrumbs' -%}
      </div>
    {% endif %}
    <div
      class="tablet-2 mb-1 grid-cols{% if product.media.size > 0 %} bls__grid-media-{{ section.settings.media_position }}{% else %} product--no-media {% endif %} gap-large {{ section.settings.gallery_layout }} {{ section.settings.desktop_media_width }}"
      style="{%- if product.media.size > 0 -%}--col-number: 2{%- else -%}--col-number: 1{%- endif -%}"
    >
      {%- if product.media.size > 0 -%}
        {%- assign default_p = 0 -%}
        {%- unless product.has_only_default_variant -%}
          {%- assign default_p = product.selected_or_first_available_variant.featured_image.position -%}
        {%- endunless -%}
        <div class="feature-product-media relative {{ section.settings.image_zoom }}{% if section.settings.gallery_layout == "columns" or section.settings.gallery_layout == "stack" %} is_column{% endif %}{% if section.settings.variant_image_group %} is_variant_group{% endif %}">
          {% render 'media-gallery' | images: product.media | sec_settings: section.settings | product: product | section: section | variant_id: product.selected_or_first_available_variant.id | position_index: default_p %}
        </div>
      {%- endif -%}
      <div class="product__info-wrapper grid__item{% if settings.page_width > 1400 and section.settings.media_size == "small" %} product__info-wrapper--extra-padding{% endif %}">
        {% if section.settings.image_zoom == 'external_zoom' %}
          <div class="zoom-external-area"></div>
        {% endif %}
        <product-info
          id="ProductInfo-{{ section.id }}"
          data-section="{{ section.id }}"
          data-url="{{ product.url }}"
          class="d-block product__info-container{% if section.settings.enable_sticky_desktop %} sticky top-30 z-3{% endif %}"
        >
          {%- assign product_form_id = 'product-form-' | append: section.id -%}
          {%- liquid
            assign p_qty = 0
            for variant in product.variants
              assign p_qty = p_qty | plus: variant.inventory_quantity
            endfor
          -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'text' -%}
                <p
                  class="product__text inline-richtext mt-23 mb-23"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.text -}}
                </p>
              {%- when 'inventory_status' -%}
                {% if product.metafields.custom.external_affiliate == blank %}
                  <div class="main-product-block inventory_status mt-20" {{ block.shopify_attributes }}>
                    {%- liquid
                      assign product_qty = product.selected_or_first_available_variant.inventory_quantity
                      assign product_management = product.selected_or_first_available_variant.inventory_management
                      assign product_available = product.selected_or_first_available_variant.available
                    -%}
                    <inventory-progress-bar
                      data-order="{{ product_qty }}"
                      data-available="{{ product_available }}"
                      data-low-stock="{{ 'products.product.inventory_status.low_stock' | t }}"
                      data-sold-out="{{ 'products.product.inventory_status.sold_out' | t }}"
                      data-pre-order="{{ 'products.product.inventory_status.pre_order' | t }}"
                      data-available-message="{{ 'products.product.inventory_status.available' | t }}"
                      data-fe-amount="{{ block.settings.inventory_base }}"
                      data-threshold="{{ block.settings.inventory_threshold }}"
                      class="no-js-hidden{% if product_qty <= block.settings.inventory_threshold %} notify{% endif %}{% if product_management != "shopify" %} d-none{% else %} d-block{%- endif -%}"
                    >
                      <div class="progress-bar-message mb-12 d-flex gap-10 align-start lh-1-4">
                        <span class="icon_error relative top--2">
                          {% render 'icon-error' %}
                        </span>
                        <span class="icon_checkmark relative">
                          {% render 'icon-checkmark', custom_width: 15 -%}
                        </span>
                        <span class="icon_outstock relative top--2">
                          {% render 'icon-meh', custom_width: 22 -%}
                        </span>
                        <div class="message">
                          {%- if product_qty <= block.settings.inventory_threshold -%}
                            {%- if product_qty > 0 -%}
                              {{ 'products.product.inventory_status.low_stock' | t: count: product_qty }}
                            {%- else -%}
                              {%- if product_available -%}
                                {{ 'products.product.inventory_status.pre_order' | t }}
                              {%- else -%}
                                {{ 'products.product.inventory_status.sold_out' | t }}
                              {%- endif -%}
                            {%- endif -%}
                          {%- else -%}
                            {{ 'products.product.inventory_status.available' | t }}
                          {%- endif -%}
                        </div>
                      </div>
                      <div class="progress-bar rounded-5">
                        <div class="progress"></div>
                      </div>
                    </inventory-progress-bar>
                    {% if block.settings.show_transfer_notice %}
                      {%- if product.selected_or_first_available_variant.incoming -%}
                        <div class="incomming-message mb-10">
                          {%- if product.selected_or_first_available_variant.next_incoming_date != blank -%}
                            {%- assign date_convert = product.selected_or_first_available_variant.next_incoming_date
                              | date: '%B %d, %Y'
                            -%}
                            {{ 'products.product.inventory_status.incoming_with_date' | t: date: date_convert }}
                          {%- else -%}
                            {{ 'products.product.inventory_status.incoming' | t }}
                          {%- endif -%}
                        </div>
                      {%- endif -%}
                    {%- endif -%}
                  </div>
                {% endif %}
              {%- when 'title' -%}
                <h1 class="heading-letter-spacing product-title h1 mt-20 mb-0" {{ block.shopify_attributes }}>
                  {%- if product.title != blank -%}
                    {{ product.title | escape }}
                  {%- else -%}
                    {{ 'onboarding.product_title' | t }}
                  {%- endif -%}
                </h1>
              {%- when 'price' -%}
                <div
                  class="no-js-hidden d-flex align-center w-full mt-20 gap-15 border-bottom pb-20"
                  id="price-{{ section.id }}"
                  role="status"
                  {{ block.shopify_attributes }}
                >
                  <div class="h5-size heading-color mb-5">
                    {%- if block.settings.sale_badge -%}<div class="d-flex gap-15 align-center w-full">{%- endif -%}
                    {%- render 'price' | scope: 'detail' | product: product | show_badges: false | price_class: 'price--large' -%}
                    {%- if block.settings.sale_badge -%}
                      <div
                        class="sale_badge flex-1 d-inline-flex gap-10"
                        {{ block.shopify_attributes }}
                      >
                        {% if product.metafields.custom.external_affiliate == blank %}
                          {% render 'product-badges' | card_product: product | type: "price_badges" %}
                        {%- else -%}
                          {% render 'product-badges' | card_product: product | type: "external" %}
                        {% endif %}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.sale_badge -%}</div>{%- endif -%}
                    {%- if cart.tax_included or shop.shipping_policy.body != blank -%}
                      <div class="product__tax caption rte mt-5">
                        {%- if cart.tax_included -%}
                          {{ 'products.product.include_taxes' | t }}
                        {%- endif -%}
                        {%- if shop.shipping_policy.body != blank -%}
                          {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                    {%- if product != blank -%}
                      <div {{ block.shopify_attributes }}>
                        {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                        {%- form 'product',
                          product,
                          id: product_form_installment_id,
                          class: 'installment caption-large'
                        -%}
                          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                          {{ form | payment_terms }}
                        {%- endform -%}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- when 'custom_liquid' -%}
                {%- if block.settings.custom_liquid != blank -%}
                  <div class="main-product-block mt-20" {{ block.shopify_attributes }}>
                    {{ block.settings.custom_liquid }}
                  </div>
                {%- endif -%}
              {%- when 'countdown_timer' -%}
                {% if product.metafields.custom.external_affiliate == blank %}
                  <div
                    class="main-product-block countdown_timer mt-20 accent-color-second-bg rounded-10 pt-20 px-30 pb-25"
                    {{ block.shopify_attributes }}
                  >
                    {%- if product.metafields.custom.countdown_timer -%}
                      {%- if block.settings.block_heading -%}
                        <p class="accordion__title mb-10">{{ block.settings.block_heading }}</p>
                      {%- endif -%}
                      <countdown-timer
                        class="heading-color d-flex flex-wrap h2-size semi-bold"
                        data-deadline="{{ product.metafields.custom.countdown_timer }}"
                        data-days="{{ 'products.product.countdown.format.days' | t }}"
                        data-hours="{{ 'products.product.countdown.format.hours' | t }}"
                        data-mins="{{ 'products.product.countdown.format.mins' | t }}"
                        data-secs="{{ 'products.product.countdown.format.secs' | t }}"
                      >
                      </countdown-timer>
                      <noscript>
                        {% assign input_date = product.metafields.custom.countdown_timer | date: '%Y-%m-%d' %}
                        {% assign year = input_date | date: '%Y' %}
                        {% assign month = input_date | date: '%m' %}
                        {% assign day = input_date | date: '%d' %}

                        <div class="heading-color d-flex flex-wrap h2-size semi-bold">
                          <div class="countdown-container d-flex align-center lh-1">
                            <span>{{ year }}</span>
                          </div>
                          <div class="countdown-container d-flex align-center lh-1">
                            <span>{{ month }}</span>
                          </div>
                          <div class="countdown-container d-flex align-center lh-1">
                            <span>{{ day }}</span>
                          </div>
                        </div>
                      </noscript>
                    {%- endif -%}
                  </div>
                {% endif %}
              {%- when 'variant_picker' -%}
                {% if product.metafields.custom.external_affiliate == blank %}
                  <div class="main-product-block mt-20" {{ block.shopify_attributes }}>
                    {%- assign is_dropdown = false -%}
                    {% if block.settings.variant_type == 'dropdown' %}
                      {%- assign is_dropdown = true -%}
                    {% endif %}
                    {%- render 'color-swatches' | product: product | type: "detail" | is_dropdown: is_dropdown | t: "page" | has_size_guide: true | block: block | product_form_id: product_form_id -%}
                  </div>
                {% endif %}
              {%- when 'product_meta' -%}
                {%- if product.metafields.custom.external_affiliate == blank -%}
                  <ul class="product-meta list-style-none p-0 my-20 pt-25 capitalize" {{ block.shopify_attributes }}>
                    {% if block.settings.show_sku %}
                      <li>
                        <span class="product-meta-label heading-color">{{ 'products.product.sku' | t }}:</span>
                        <span
                          class="product__sku no-js-hidden{% if product.selected_or_first_available_variant.sku.size == 0 %} visibility-hidden{% endif %}"
                          role="status"
                        >
                          <span class="sku_content product-meta-value sku-value">
                            {{- product.selected_or_first_available_variant.sku | default: 'N/A' -}}
                          </span>
                        </span>
                      </li>
                    {% endif %}
                    {% if block.settings.show_tags %}
                      <li>
                        <span class="product-meta-label heading-color">{{ 'products.product.tags' | t }}:</span>
                        <span class="product-meta-value">
                          {% if product.tags != blank %}
                            {% for tags in product.tags %}
                              {{- tags -}}
                              {%- if forloop.last != true -%},{%- endif -%}
                            {% endfor %}
                          {%- else -%}
                            N/A
                          {% endif %}
                        </span>
                      </li>
                    {% endif %}
                    {% if block.settings.show_type %}
                      <li>
                        <span class="product-meta-label heading-color">{{ 'products.product.type' | t }}:</span>
                        <span class="product-meta-value">{{ product.type | link_to_type }}</span>
                      </li>
                    {% endif %}
                    {% if block.settings.show_collections %}
                      <li class="product-collections">
                        <span class="product-meta-label heading-color">{{ 'products.product.collections' | t }}:</span>
                        <span class="broduct-meta-value">
                          {% if product.collections.size > 0 %}
                            {% for collection in product.collections %}
                              <a href="{{ collection.url }}" class="text-color remove-underline pointer">
                                {{- collection.title -}}
                                {%- if forloop.last != true -%},{%- endif -%}
                              </a>
                            {% endfor %}
                          {%- else -%}
                            N/A
                          {% endif %}
                        </span>
                      </li>
                    {% endif %}
                  </ul>
                {%- endif -%}
              {%- when 'buy_buttons' -%}
                <div
                  class="main-product-block mt-20 mb-30 product__form-add-cart product-sticky-show"
                  {{ block.shopify_attributes }}
                >
                  {% if product.metafields.custom.external_affiliate == blank %}
                    {%- if settings.product_notify_re_stock -%}
                      {%- capture cc -%}
                      {% if product.selected_or_first_available_variant.inventory_management == 'null' or product.selected_or_first_available_variant.inventory_quantity > 0 or product.selected_or_first_available_variant.available %} d-none{% endif %}
                    {%- endcapture -%}
                      {%- capture ccp -%}
                      {% if product.selected_or_first_available_variant.inventory_management != 'null' and product.selected_or_first_available_variant.inventory_quantity < 1 and product.selected_or_first_available_variant.available == false %} d-none{% endif %}
                    {%- endcapture -%}
                      {%- render 'stock-notify', product: product, customClass: cc -%}
                    {%- endif -%}
                    {%- render 'buy-buttons',
                      block: block,
                      product: product,
                      product_form_id: product_form_id,
                      section_id: section.id,
                      customClass: ccp,
                      formClass: 'main-product-form'
                    -%}
                  {%- else -%}
                    <a
                      href="{{ product.metafields.custom.external_affiliate.value.external_link }}"
                      rel="nofollow"
                      target="_blank"
                      aria-label="{{ product.metafields.custom.external_affiliate.value.button_text }}"
                      class="btn product-form__submit relative text-center w-full whitespace-nowrap min-height-48 mb-15 mr-10 animation flash-move"
                    >
                      {{- product.metafields.custom.external_affiliate.value.button_text -}}
                    </a>
                  {% endif %}
                  <div class="mt-20 mb-20 pickup_avaiability">
                    {%- render 'pickup-availability', product: product -%}
                  </div>
                </div>
              {%- when 'trust_seal' -%}
                {% if product.metafields.custom.external_affiliate == blank %}
                  {%- if block.settings.image != blank -%}
                    <div
                      class="main-product-block mt-20 trust_seal"
                      style="--image-width: {{ block.settings.image_width }}px;"
                      {{ block.shopify_attributes }}
                    >
                      <div class="trust_seal-image">
                        {%- assign alt = block.settings.image.alt | default: 'trust seal' -%}
                        {%- if block.settings.heading != blank -%}
                          {%- assign alt = block.settings.heading -%}
                        {%- endif -%}
                        {{
                          block.settings.image
                          | image_url: width: 1100
                          | image_tag:
                            loading: 'lazy',
                            sizes: '100vw',
                            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                            alt: alt
                        }}
                      </div>
                      {% if block.settings.heading != blank %}
                        <div class="h6 trust_seal-text">
                          {{ block.settings.heading }}
                        </div>
                      {% endif %}
                    </div>
                  {%- endif -%}
                {% endif %}
              {%- when 'rating' -%}
                {% render 'review' | review_star: true | block: block %}
              {%- when 'share' -%}
                {%- unless block.settings.copy == false
                  and block.settings.facebook == false
                  and block.settings.twitter == false
                  and block.settings.pinterest == false
                -%}
                  <div class="main-product-block mt-30" {{ block.shopify_attributes }}>
                    {% if block.settings.facebook %}
                      <button
                        class="no-js-hidden mr-10 transition pointer w-40 h-40 d-inline-flex middle-center link list-social__link px-10 tooltip rounded-corner-item"
                        tabindex="0"
                        aria-label="{{ 'general.social.alt_text.share_on_facebook' | t }}"
                        onclick="window.open('https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href), 'facebook-share-dialog', 'width=436,height=436'); return false;"
                      >
                        {%- render 'icon-facebook', custom_width: 18 -%}
                      </button>
                    {% endif %}
                    {% if block.settings.twitter %}
                      <button
                        tabindex="0"
                        aria-label="{{ 'general.social.alt_text.share_on_twitter' | t }}"
                        class="no-js-hidden mr-10 transition pointer w-40 h-40 d-inline-flex middle-center link list-social__link px-10 tooltip rounded-corner-item"
                        onclick="window.open('http://twitter.com/home/?status='+encodeURIComponent(location.href), 'twitter-share-dialog', 'width=436,height=436'); return false;"
                      >
                        {%- render 'icon-twitter', custom_width: 18 -%}
                      </button>
                    {% endif %}
                    {% if block.settings.pinterest %}
                      <button
                        tabindex="0"
                        aria-label="{{ 'general.social.alt_text.share_on_pinterest' | t }}"
                        class="no-js-hidden mr-10 transition pointer w-40 h-40 d-inline-flex middle-center link list-social__link px-10 tooltip rounded-corner-item"
                        onclick="window.open('http://pinterest.com/pin/create/button/?url='+encodeURIComponent(location.href), 'pinterest-share-dialog', 'width=436,height=436'); return false;"
                      >
                        {%- render 'icon-pinterest', custom_width: 18 -%}
                      </button>
                    {% endif %}
                    {% if block.settings.copy %}
                      {% assign share_url = product.selected_variant.url
                        | default: product.url
                        | prepend: request.origin
                      %}
                      {% render 'share-button', block: block, share_link: share_url %}
                    {% endif %}
                  </div>
                {%- endunless -%}
              {%- when 'complementary' -%}
                {% if product.metafields.custom.external_affiliate == blank %}
                  {{ 'component-complementary-products.css' | asset_url | stylesheet_tag }}
                  <product-recommendations
                    class="related-products-slide mt-20 d-block complementary-products quick-add-hidden no-js-hidde"
                    data-items="1"
                    data-controls="{% if block.settings.show_navigation %}true{% else %}false{% endif %}"
                    data-nav="{% if block.settings.show_pagination %}true{% else %}false{% endif %}"
                    data-loop="true"
                    data-autoplay="false"
                    data-mouse-drag="true"
                    data-autoplay-timeout="5000"
                    data-controls-position="top"
                    data-nav-as-thumbnails="false"
                    data-autoplay-button-output="false"
                    data-axis="horizontal"
                    data-mode="carousel"
                    data-fix-height="false"
                    data-product-type="true"
                    data-gap="small"
                    {{ block.shopify_attributes }}
                    data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&intent=complementary&limit={{ block.settings.product_list_limit }}"
                  >
                    {%- if recommendations.performed and recommendations.products_count > 0 -%}
                      {%- assign number_of_slides = recommendations.products_count
                        | plus: 0.0
                        | divided_by: block.settings.products_per_page
                        | ceil
                      -%}
                      <aside aria-label="{{ 'accessibility.complementary_products' | t }}">
                        <div class="complementary-products__container">
                          {%- if block.settings.block_heading -%}
                            <h2 class="h5 accordion__title mt-0">{{ block.settings.block_heading }}</h2>
                          {%- endif -%}
                          <div class="slide-container">
                            {%- for i in (1..number_of_slides) -%}
                              <div tabindex="-1" role="group">
                                {%- for product in recommendations.products
                                  limit: block.settings.products_per_page
                                  offset: continue
                                -%}
                                  {% render 'card-product',
                                    card_product: product,
                                    section_id: section.id,
                                    disable_quickview: true,
                                    disable_badge: true,
                                    disable_rate: true,
                                    disable_swatch: true,
                                    show_quick_add: block.settings.enable_quick_add,
                                    disable_vendor: true,
                                    disable_json: true
                                  %}
                                {%- endfor -%}
                              </div>
                            {%- endfor -%}
                          </div>
                        </div>
                      </aside>
                    {%- endif -%}
                  </product-recommendations>
                {% endif %}
              {%- when 'collapsible_tab' -%}
                <collapsible-row tabindex="0" class="main-product-block collapsible_tab" {{ block.shopify_attributes }}>
                  <div class="no-js-hidden">
                    <div class="detail-parent relative py-5 border-bottom pointer relative d-flex align-center space-between">
                      <span class="heading-color">
                        {{- block.settings.heading | default: block.settings.page.title -}}
                      </span>
                      <span class="open-children-toggle touch-target transition">
                        {% render 'icon-plus-animation', custom_width: 12 %}
                      </span>
                    </div>
                    <div class="detail-target py-10" style="display: none;">
                      {{ block.settings.content }}
                      {% if block.settings.page != null %}
                        {{ pages[block.settings.page].content }}
                      {% endif %}
                    </div>
                  </div>
                  <noscript>
                    <details>
                      <summary class="detail-parent relative py-5 border-bottom pointer relative d-flex align-center space-between">
                        <span class="heading-color">
                          {{- block.settings.heading | default: block.settings.page.title -}}
                        </span>
                        <span class="open-children-toggle touch-target transition">
                          {% render 'icon-plus-animation', custom_width: 12 %}
                        </span>
                      </summary>
                      <div class="detail-target py-10 py-15 custom-scrollbar overflow-y-auto">
                        {{ block.settings.content }}
                        {% if block.settings.page != null %}
                          {{ pages[block.settings.page].content }}
                        {% endif %}
                      </div>
                    </details>
                  </noscript>
                </collapsible-row>
              {%- when 'popup' -%}
                <div class="main-product-block d-inline-flex mt-20" {{ block.shopify_attributes }}>
                  <div class="align-center animation-icon-on-hover overlay-custom-popup">
                    <toggle-nav
                      class="toggle-action pointer custom-popup btn-reset uppercase d-inline-flex align-center top-0 no-js-hidden"
                      data-item="overlay-custom-popup-{{ block.id }}"
                    >
                      <button
                        class="button btn-reset"
                        aria-haspopup="dialog"
                        aria-label="{{ block.settings.heading | default: block.settings.page.title }}"
